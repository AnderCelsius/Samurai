@model SamuraiViewModel
@{
    ViewData["Samurais"] = "SamuraiDetails";
    var singleQuote = Model.Quotes.FirstOrDefault();
}

<section class="container pt-5 pb-5">
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-md-4">
                <div class="img-fluid">
                    <img src="@Model.ImageUrl" style="width: 350px; height: 400px;" />
                </div>
            </div>
            <div class="col-md-8 py-3">
                <p>@Model.Story</p>
                <figure class="text-center">
                    <blockquote class="blockquote">
                        <p>@singleQuote.Text</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        @Model.Name</cite>
                    </figcaption>
                </figure>
                <blockquote class="blockquote">
                    <p></p>
                </blockquote>
            </div>
        </div>
        <div class="row">
            <h4>Other notable Qoutes from @Model.Name: </h4>
            <ul>
                @for (var i = 1; i<@Model.Quotes.Count(); i++)
                {
                    <li>@Model.Quotes[i].Text</li>
                }
            </ul>

        </div>

    </div>
</section>
