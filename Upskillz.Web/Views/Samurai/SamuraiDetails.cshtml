@model SamuraiViewModel
@{
    ViewData["Samurais"] = "SamuraiDetails";
    var singleQuote = Model.Quotes.FirstOrDefault();
}

<section class="container pt-5 pb-5">
    <div class="container pt-5 pb-5">
        <div class="row">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Samurai" asp-action="AllSamurais">Samurais</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-4 pb-3">
                <div class="img-fluid">
                    <img src="@Model.ImageUrl" style="width: 350px; height: 400px;" />
                </div>
            </div>
            <div class="col-sm-12 col-md-8 pb-3">
                <h3 class="text-left">@Model.Name</h3>
                <p class="" style="text-align: justify">@Model.Story</p>
                <figure class="text-center">
                    <blockquote class="blockquote">
                        <p>@singleQuote.Text</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        <cite>@Model.Name</cite>
                    </figcaption>
                </figure>
                <blockquote class="blockquote">
                    <p></p>
                </blockquote>
            </div>
        </div>
        <div class="row mt-5">            
            <h4 class="text-center mb-3">Other notable Qoutes from @Model.Name: </h4>            

            @for (var i = 1; i < @Model.Quotes.Count(); i++)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>@Model.Quotes[i].Text</p>
                        </blockquote>
                    </div>
                </div>
            }


        </div>

    </div>
</section>
